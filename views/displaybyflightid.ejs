<style>

    .maincontainer{
        display: flex;
        justify-content: center;
        align-items: center;
        background: #82ccdd;
        height: 150vh;
    }
 .root{
     width: 1000px;
     height: auto;
     background: #dff9fb;
     padding: 10px;
 }
.heading{
    color: #1e3799;
    font-size: 32px;
    font-weight: bold;
    font-family: Oxygen;
    display: flex;
    justify-content: center;
    
}
.msgcolor{
    color: rgba(219, 3, 3, 0.822);
    font-size: 24px;
    font-weight: bold;
    font-family: Oxygen;
    display: flex;
    justify-content: center;
    
}
</style>

<html>

<head>
         <!--Import Google Icon Font-->
         <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
         
    <link href="https://fonts.googleapis.com/css2?family=Oxygen&display=swap" rel="stylesheet">

         

          
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <script src="/javascripts/project.js"></script>

  <script>
       $(document).ready(function(){
    $('select').formSelect();
  });
  
        $(document).ready(function(){
    $('.timepicker').timepicker();
  });
  </script>
</head>

<body>

  <form action="/flight/editdeleterecord" method="post">

    <div class="maincontainer">
        <div class="root">
          <div class="heading">
             <span><img src="/images/Air_India.png" width="60"></span> Flight Enquiry System
          </div>

          <hr style="color: black;">


          <div class="row">
            <div class="col s6">
                <div class="input-field">
                    <i class="material-icons prefix">flight</i>
                    <input id="icon_fid" name="flightid" value="<%= data.flightid %>" readonly="true" type="text" class="validate">
                    <label for="icon_fid">Flight Id</label>
                  </div>
          </div>
          
   
          
            <div class="col s6">
                <div class="input-field">
                    <i class="material-icons prefix">business</i>
                    <input id="icon_com" name="companyname" value="<%= data.companyname %>" type="text" class="validate">
                    <label for="icon_com">Company Name</label>
                  </div>
          </div>
          </div>

          <div class="row">
            <div class="col s3">
                <div class="input-field">
                    <i class="material-icons prefix">flight_takeoff</i>
                        <select name="sourcestate" id="sourcestate">
                          <option value="<%=data.sourcestateid%>" selected><%= data.ss %></option>
                        </select>
                        <label>Source State</label>
                      </div>
                        
                 
          </div>

          <div class="col s3">
            <div class="input-field">
                <i class="material-icons prefix">flight_takeoff</i>
                <select name="sourcecity" id="sourcecity">
                  <option value="<%=data.sourcecityid%>" selected><%=data.sc%></option>
                </select>
                <label>Source City</label>
              </div>
      </div>

      <div class="col s3">
        <div class="input-field">
            <i class="material-icons prefix">flight_land</i>
            <select name="destinationstate" id="destinationstate">
              <option value="<%=data.destinationstateid%>" selected><%=data.ds%></option>
            </select>
            <label>Destination State</label>
          </div>
  </div>

          
          <div class="col s3">
            <div class="input-field">
                <i class="material-icons prefix">flight_land</i>
                <select name="destinationcity" id="destinationcity">
                  <option value="<%=data.destinationcityid%>" selected><%=data.dc%></option>
                </select>
                <label for="icon_citydestination">Destination City</label>
              </div>
      </div>
          </div>


<div class="row">
            <div class="col s6">
          <div class="input-field">
            <select name="status">
              <option value="" selected><%=data.status%></option>
              <option>Non Stop</option>
              <option>With Stop</option>
            </select>
            <label>Status</label>
          </div>
            </div>

            <% var tclass=data.flightclass.split('#')
            var ts=['','','']
            for(i=0;i<tclass.length;i++)
            {
                if(tclass[i]=='Economy')
                {ts[0]='checked'}
                if(tclass[i]=='Business')
                {ts[1]='checked'}
                if(tclass[i]=='Executive')
                {ts[2]='checked'}
            }
            %>
            <div class="col s6" style="display: flex;flex-direction: row;justify-content: space-around;">
            <p>
                <label>
                  <input name="fclass" value="Economy" type="checkbox" <%=ts[0]%> />
                  <span>Economy</span>
                </label>
              </p>
              <p>
                <label>
                  <input name="fclass" value="Business" type="checkbox" <%=ts[1]%> />
                  <span>Business</span>
                </label>
              </p>
              <p>
                <label>
                  <input name="fclass" value="Executive" type="checkbox" <%=ts[2]%> />
                  <span>Executive</span>
                </label>
              </p>
            </div>
</div>


           
                   <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">access_time</i>
                            <input id="icon_sourcetime" value="<%=data.sourcetiming%>" name="sourcetime" type="text" class="timepicker">
                            <label for="icon_sourcetime">Source Time</label>
                          </div>
                  </div>

                  <div class="col s6">
                    <div class="input-field">
                        <i class="material-icons prefix">access_time</i>
                        <input id="icon_destime"value="<%=data.destinationtiming%>" name="destime" type="text" class="timepicker">
                        <label for="icon_destime">Destination Time</label>
                      </div>
              </div>
        
                   </div>

                   <div class="row">  
            <div class="col s12" style="display: flex;flex-direction: row;justify-content: space-around;">
                <p>
                    <label>
                      <input name="days" value="Sunday" type="checkbox" <%= data.days.includes('Sunday')?'checked':'' %> />
                      <span>Sunday</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input name="days" value="Monday" type="checkbox" <%= data.days.includes('Monday')?'checked':'' %>  />
                      <span>Monday</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input name="days" value="Tuesday" type="checkbox" <%= data.days.includes('Tuesday')?'checked':'' %>  />
                      <span>Tuesday</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input name="days" value="Wednesday" type="checkbox" <%= data.days.includes('Wednesday')?'checked':'' %>  />
                      <span>Wednesday</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input name="days" value="Thursday" type="checkbox" <%= data.days.includes('Thursday')?'checked':'' %>  />
                      <span>Thursday</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input name="days" value="Friday" type="checkbox" <%= data.days.includes('Friday')?'checked':'' %>  />
                      <span>Friday</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input name="days" value="Saturday" type="checkbox" <%= data.days.includes('Saturday')?'checked':'' %>  />
                      <span>Saturday</span>
                    </label>
                  </p>
                  
                </div>
    </div>

    
    <div class="row">  
      <div class="col s6" style="display: flex;justify-content: center;">
  <button class="btn waves-effect waves-light" type="submit" name="btn" value="Edit">Edit
    <i class="material-icons right">send</i>
  </button>
  </div>

  <div class="col s6" style="display: flex;justify-content: center;">
    <button class="btn waves-effect waves-light" type="submit" name="btn" value="Delete">Delete
      <i class="material-icons right">remove</i>
    </button>
    </div>

        </div>


        </div>
    </div>

  </form>

</body>

      <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</html>